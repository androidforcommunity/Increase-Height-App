<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"

        tools:context=".navcontroller.me">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_marginLeft="@dimen/dimen_4"
            android:layout_marginRight="@dimen/dimen_4"
            android:id="@+id/accountCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="4dp"
                android:layout_marginStart="@dimen/dimen_24"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto"
                    android:text="ACCOUNT"
                    android:textColor="@color/textHighlight"
                    android:textSize="@dimen/text_12"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/accountLayout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/account">
                    <ImageView
                        android:backgroundTint="@color/black"
                        android:src="@drawable/ic_assignment_black_18dp"
                        android:layout_width="@dimen/dimen_24"
                        android:layout_height="@dimen/dimen_24"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/black"
                        android:text="My Profile"
                        android:textSize="@dimen/text_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginLeft="@dimen/dimen_4"
            android:layout_marginRight="@dimen/dimen_4"            android:id="@+id/notificationsCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/accountCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_24"
                android:orientation="vertical"
                android:padding="@dimen/dimen_4">

                <TextView
                    android:id="@+id/notifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto"
                    android:text="NOTIFICATIONS"
                    android:textColor="@color/textHighlight"
                    android:textSize="@dimen/text_12"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/accountCard" />

                <LinearLayout
                    android:id="@+id/notificationsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/notifications">

                    <ImageView
                        android:layout_width="@dimen/dimen_24"
                        android:layout_height="@dimen/dimen_24"
                        android:backgroundTint="@color/black"
                        android:src="@drawable/ic_alarm_black_18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:text="Remind me to workout every day"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_16" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            app:cardCornerRadius="16dp"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_marginLeft="@dimen/dimen_4"
            android:layout_marginRight="@dimen/dimen_4"            android:id="@+id/generalSettingsCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notificationsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="4dp"
                android:layout_marginStart="@dimen/dimen_24"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto"
                    android:text="GENERAL SETTINGS"
                    android:textColor="@color/textHighlight"
                    android:textSize="@dimen/text_12"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/accountCard" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/notifications">
                    <ImageView
                        android:backgroundTint="@color/black"
                        android:src="@drawable/ic_language_black_24dp"
                        android:layout_width="@dimen/dimen_24"
                        android:layout_height="@dimen/dimen_24"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/black"
                        android:text="Language Options"
                        android:textSize="@dimen/text_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/notifications">
                    <ImageView
                        android:backgroundTint="@color/black"
                        android:src="@drawable/ic_restart_alt_black_24dp"
                        android:layout_width="@dimen/dimen_24"
                        android:layout_height="@dimen/dimen_24"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/black"
                        android:text="Restart Progress"
                        android:textSize="@dimen/text_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/notifications">
                    <ImageView
                        android:backgroundTint="@color/black"
                        android:src="@drawable/ic_delete_black_24dp"
                        android:layout_width="@dimen/dimen_24"
                        android:layout_height="@dimen/dimen_24"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/black"
                        android:text="Delete all data"
                        android:textSize="@dimen/text_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="16dp"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_marginLeft="@dimen/dimen_4"
            android:layout_marginRight="@dimen/dimen_4"            android:id="@+id/supportUsCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/generalSettingsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="4dp"
                android:layout_marginStart="@dimen/dimen_24"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto"
                    android:text="SUPPORT US"
                    android:textColor="@color/textHighlight"
                    android:textSize="@dimen/text_12"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/accountCard" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/notifications">
                    <ImageView
                        android:backgroundTint="@color/black"
                        android:src="@drawable/ic_play_circle_filled_black_24dp"
                        android:layout_width="@dimen/dimen_24"
                        android:layout_height="@dimen/dimen_24"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/black"
                        android:text="Subscribe to our YouTube Channel"
                        android:textSize="@dimen/text_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/notifications">
                    <ImageView
                        android:backgroundTint="@color/black"
                        android:src="@drawable/ic_bug_report_24px"
                        android:layout_width="@dimen/dimen_24"
                        android:layout_height="@dimen/dimen_24"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/black"
                        android:text="Report A Bug"
                        android:textSize="@dimen/text_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/notifications">
                    <ImageView
                        android:backgroundTint="@color/black"
                        android:src="@drawable/ic_share_24px"
                        android:layout_width="@dimen/dimen_24"
                        android:layout_height="@dimen/dimen_24"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/black"
                        android:text="Share with Friends"
                        android:textSize="@dimen/text_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/notifications">
                    <ImageView
                        android:backgroundTint="@color/black"
                        android:src="@drawable/ic_baseline_emoji_people_24"
                        android:layout_width="@dimen/dimen_24"
                        android:layout_height="@dimen/dimen_24"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/black"
                        android:text="About Us"
                        android:textSize="@dimen/text_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:textSize="@dimen/text_16"
            android:text="Version 1.0.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/supportUsCard" />
        <View
            android:layout_marginBottom="@dimen/dimen_64"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_64">

        </View>
    </LinearLayout>

    </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
