<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#BEC4E3</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">#edeef7</item>
    </style>

<!--    <style name="AppTheme.NoActionBar">-->
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">true</item>-->
<!--    </style>-->

<!--    <style name="CustomText">-->
<!--        <item name="android:textAllCaps">true</item>-->
<!--        <item name="android:textSize">13sp</item>-->
<!--    </style>-->
    <!-- Fragment Question Style -->
    <style name="TextViewQuestionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">21dp</item>
        <item name="android:layout_marginTop">21dp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- Fragment Edit Text Style -->
    <style name="EditTextFragment">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">21dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/textColor</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Fragment Button Style -->
    <style name="FragmentButtonStyle">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@drawable/rounded_btn</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:layout_width">162dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:background">@color/extra_dark_grey</item>
        <item name="backgroundTint">@color/extra_dark_grey</item>
    </style>



</resources>